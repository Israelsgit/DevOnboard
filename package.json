{
    "name": "devonboard-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "cd backend && ./venv/bin/uvicorn main:app --reload --port 8000",
        "dev:frontend": "cd frontend && npm run dev",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && python3 -m venv venv && ./venv/bin/pip install -r requirements.txt"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}